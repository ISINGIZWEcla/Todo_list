<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jovanovic.stefan.Todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Todolist"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.jovanovic.stefan.Todolist.UpdateActivity"
            android:parentActivityName="com.jovanovic.stefan.Todolist.MainActivity"/>
        <activity
            android:name="com.jovanovic.stefan.Todolist.AddActivity"
            android:label="Add Activity"
            android:parentActivityName="com.jovanovic.stefan.Todolist.MainActivity" />
        <activity
            android:name="com.jovanovic.stefan.Todolist.MainActivity"
            android:label="Todo List">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>